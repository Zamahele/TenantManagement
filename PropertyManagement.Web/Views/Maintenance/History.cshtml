@model IEnumerable<PropertyManagement.Web.ViewModels.MaintenanceRequestViewModel>
@{
    ViewData["Title"] = "Maintenance History";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered align-middle mb-0"
       id="maintenanceHistoryTable"
       data-datatable
       data-page-length="10"
       data-search-label="Search maintenance history:"
       data-empty-message="No maintenance history found">
    <thead class="table-light">
        <tr>
            <th>Description</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Request Date</th>
            <th>Completed Date</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td>@item.AssignedTo</td>
            <td>@item.RequestDate.ToShortDateString()</td>
            <td>@item.CompletedDate?.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>