@model PropertyManagement.Domain.Entities.MaintenanceRequest

@{
  ViewData["Title"] = "Log Maintenance Request";
  var roomNumber = ViewBag.RoomNumber as string;
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0 d-flex align-items-center">
            <i class="bi bi-tools me-2"></i> Log Maintenance Request
          </h4>
        </div>
        <div class="card-body bg-light">
          <form asp-action="TenantCreate" method="post" autocomplete="off">
            <div class="mb-4">
              <label class="form-label">Room</label>
              <input type="text" class="form-control" value="@roomNumber" readonly />
              <input type="hidden" asp-for="RoomId" />
              <input type="hidden" asp-for="TenantId" />
            </div>
            <div class="mb-4">
              <label asp-for="Description" class="form-label"></label>
              <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the issue..." required></textarea>
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Status" value="Pending" />
            <input type="hidden" asp-for="AssignedTo" value="Manager" />
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-send me-1"></i> Submit Request
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}