@model BookingRequestViewModel

<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="bookingForm"
            asp-action="@(Model.BookingRequestId.HasValue ? "EditBookingRequest" : "BookRoom")"
            method="post"
            enctype="multipart/form-data"
            autocomplete="off">
        <input type="hidden" asp-for="BookingRequestId" />
        <div class="modal-header">
          <h5 class="modal-title" id="bookingModalLabel">Book Room</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label asp-for="RoomId" class="form-label"></label>
            <select asp-for="RoomId" asp-items="Model.RoomOptions" class="form-control"></select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="Contact" class="form-label"></label>
            <input asp-for="Contact" class="form-control" required />
            <span asp-validation-for="Contact" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="ProofOfPaymentPath" class="form-label">Attach Proof of Payment (optional)</label>
            <input type="file" class="form-control" id="ProofOfPayment" name="ProofOfPayment" accept=".jpg,.jpeg,.png,.pdf" />
          </div>
          <div class="mb-3">
            <label asp-for="Note" class="form-label"></label>
            <textarea asp-for="Note" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Submit Booking</button>
        </div>
      </form>
    </div>
  </div>
</div>