@model PropertyManagement.Web.Models.RoomFormViewModel

<div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="roomModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" style="max-width: 500px;">
    <div class="modal-content shadow-lg border-0">
      <div class="modal-header bg-primary text-white py-2">
        <h5 class="modal-title d-flex align-items-center" id="roomModalLabel">
          <i class="bi bi-door-closed me-2"></i>
          @(Model.RoomId == 0 ? "Add Room" : "Edit Room")
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-3 bg-light">
        <form id="roomForm" asp-action="CreateOrEdit" method="post" autocomplete="off">
          <input type="hidden" asp-for="RoomId" />
          <div class="mb-4">
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="form-control" maxlength="20" />
            <span asp-validation-for="Number" class="text-danger"></span>
          </div>
          <div class="mb-4">
            <label asp-for="Type" class="form-label"></label>
            <input asp-for="Type" class="form-control" maxlength="50" />
            <span asp-validation-for="Type" class="text-danger"></span>
          </div>
          <div class="mb-4">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" asp-items="Model.StatusOptions" class="form-control"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
          </div>
          @*        <div class="mb-4">
            <label asp-for="CottageId" class="form-label"></label>
            <input asp-for="CottageId" class="form-control" />
            <span asp-validation-for="CottageId" class="text-danger"></span>
          </div> *@
          <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary px-4">
              <i class="bi bi-save me-1"></i> Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>