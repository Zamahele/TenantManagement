<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Property Management</title>
  <!-- Google Fonts - Inter for Professional Typography -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  
  <!-- Professional Design System - Import Order is Critical -->
  <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/layout-professional.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/micro-interactions.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/mobile-optimized.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/accessibility.css" asp-append-version="true" />
  
  <!-- Legacy/Specific Page Styles -->
  <link rel="stylesheet" href="~/PropertyManagement.Web.styles.css" asp-append-version="true" />
  <link href="~/css/receipt.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/rooms-dashboard.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/layout-custom.css" asp-append-version="true" />
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
  <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />
  <link rel="stylesheet" href="~/css/datatables-custom.css" asp-append-version="true" />
  
  
  <!-- Toastr CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
  @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(User.Identity.IsAuthenticated ? "has-sidebar" : "")">
  @using System.Security.Claims
  <div class="d-flex min-vh-100 flex-column">
    <!-- Professional Header -->
    <header class="bg-surface border-bottom shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid px-4 py-2">
          <!-- Brand/Logo -->
          <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
            <div class="brand-icon me-3">
              <i class="bi bi-buildings text-primary fs-4"></i>
            </div>
            <div class="brand-text">
              <h1 class="brand-title mb-0 text-primary font-semibold">Property Management</h1>
              <small class="brand-subtitle text-secondary">Professional Rental Solutions</small>
            </div>
          </a>

          <!-- Search Bar (Center) -->
          @if (User.Identity.IsAuthenticated)
          {
            <div class="navbar-search mx-auto d-none d-lg-block" style="max-width: 400px;">
              <div class="search-input-group">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="form-control search-input" placeholder="Search tenants, rooms, payments..." />
                <div class="search-dropdown">
                  <div class="search-results d-none">
                    <!-- Search results will be populated by JavaScript -->
                  </div>
                </div>
              </div>
            </div>
          }

          <!-- User Actions (Right) -->
          <div class="navbar-actions d-flex align-items-center gap-3">
            @if (User.Identity.IsAuthenticated)
            {
              <!-- Notifications -->
              <div class="notification-bell">
                <button class="btn btn-icon btn-light" type="button" data-bs-toggle="dropdown">
                  <i class="bi bi-bell"></i>
                  <span class="notification-badge">3</span>
                </button>
                <div class="dropdown-menu dropdown-menu-end notification-dropdown">
                  <div class="dropdown-header">
                    <h6 class="mb-0">Notifications</h6>
                    <small class="text-secondary">You have 3 new notifications</small>
                  </div>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item notification-item" href="#">
                    <div class="notification-icon bg-primary">
                      <i class="bi bi-cash text-white"></i>
                    </div>
                    <div class="notification-content">
                      <div class="notification-title">New Payment Received</div>
                      <div class="notification-text">Room 101 - R2,500.00</div>
                      <div class="notification-time">2 minutes ago</div>
                    </div>
                  </a>
                  <a class="dropdown-item notification-item" href="#">
                    <div class="notification-icon bg-warning">
                      <i class="bi bi-tools text-white"></i>
                    </div>
                    <div class="notification-content">
                      <div class="notification-title">Maintenance Request</div>
                      <div class="notification-text">Room 203 - Plumbing Issue</div>
                      <div class="notification-time">1 hour ago</div>
                    </div>
                  </a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item text-center" href="#">View All Notifications</a>
                </div>
              </div>

              <!-- User Profile -->
              <div class="user-profile dropdown">
                <button class="btn btn-user d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                  <div class="user-avatar">
                    <i class="bi bi-person-circle"></i>
                  </div>
                  <div class="user-info d-none d-md-block ms-2">
                    <div class="user-name">@(User.Identity.Name ?? "User")</div>
                    <div class="user-role">@(User.IsInRole("Manager") ? "Manager" : "Tenant")</div>
                  </div>
                  <i class="bi bi-chevron-down ms-2"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end user-dropdown">
                  <div class="dropdown-header">
                    <div class="user-header">
                      <div class="user-avatar-large">
                        <i class="bi bi-person-circle"></i>
                      </div>
                      <div class="user-details">
                        <div class="user-name-large">@(User.Identity.Name ?? "User")</div>
                        <div class="user-email">@(User.IsInRole("Manager") ? "Manager Account" : "Tenant Account")</div>
                      </div>
                    </div>
                  </div>
                  <div class="dropdown-divider"></div>
                  @if (User.IsInRole("Tenant"))
                  {
                    <a class="dropdown-item" asp-controller="Tenants" asp-action="Profile">
                      <i class="bi bi-person me-2"></i> My Profile
                    </a>
                  }
                  <a class="dropdown-item" href="#">
                    <i class="bi bi-gear me-2"></i> Settings
                  </a>
                  <a class="dropdown-item" href="#">
                    <i class="bi bi-question-circle me-2"></i> Help & Support
                  </a>
                  <div class="dropdown-divider"></div>
                  <form asp-controller="Tenants" asp-action="Logout" method="post" class="mb-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item text-danger">
                      <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                    </button>
                  </form>
                </div>
              </div>
            }
            else
            {
              <a class="btn btn-primary" asp-controller="Tenants" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
              </a>
            }
          </div>
        </div>
      </nav>
    </header>

    <div class="flex-grow-1 d-flex">
      <!-- Professional Sidebar -->
      @if (User.Identity.IsAuthenticated)
      {
        <aside class="sidebar bg-surface border-end">
          <div class="sidebar-content">
            <!-- Main Navigation -->
            <nav class="sidebar-nav">
              <div class="nav-section">
                <div class="nav-section-title">Main</div>
                <ul class="nav flex-column sidebar-nav">
                  <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">
                      <i class="bi bi-house-door"></i>
                      <span class="nav-text">Dashboard</span>
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Property Management Section -->
              <div class="nav-section">
                <div class="nav-section-title">Property</div>
                <ul class="nav flex-column sidebar-nav">
                  <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rooms" ? "active" : "")" 
                       asp-controller="Rooms" asp-action="Index">
                      <i class="bi bi-door-closed"></i>
                      <span class="nav-text">Rooms</span>
                      <span class="nav-badge" title="Room Count: @(ViewBag.RoomCount ?? 0)">@(ViewBag.RoomCount ?? 0)</span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Maintenance" ? "active" : "")" 
                       asp-controller="Maintenance" asp-action="Index">
                      <i class="bi bi-tools"></i>
                      <span class="nav-text">Maintenance</span>
                      @if ((ViewBag.PendingMaintenanceCount ?? 0) > 0)
                      {
                        <span class="nav-badge badge-warning" title="Pending Maintenance: @ViewBag.PendingMaintenanceCount">@ViewBag.PendingMaintenanceCount</span>
                      }
                    </a>
                  </li>
                  @if (User.IsInRole("Manager"))
                  {
                    <li class="nav-item">
                      <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inspections" ? "active" : "")" 
                         asp-controller="Inspections" asp-action="Index">
                        <i class="bi bi-clipboard-check"></i>
                        <span class="nav-text">Inspections</span>
                      </a>
                    </li>
                  }
                </ul>
              </div>

              <!-- Financial Management Section -->
              <div class="nav-section">
                <div class="nav-section-title">Financial</div>
                <ul class="nav flex-column sidebar-nav">
                  <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Payments" ? "active" : "")" 
                       asp-controller="Payments" asp-action="Index">
                      <i class="bi bi-cash"></i>
                      <span class="nav-text">Payments</span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "LeaseAgreements" ? "active" : "")" 
                       asp-controller="LeaseAgreements" asp-action="Index">
                      <i class="bi bi-file-earmark-text"></i>
                      <span class="nav-text">Leases</span>
                    </a>
                  </li>
                  @if (User.IsInRole("Manager"))
                  {
                    <li class="nav-item">
                      <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "UtilityBills" ? "active" : "")" 
                         asp-controller="UtilityBills" asp-action="Index">
                        <i class="bi bi-droplet-half"></i>
                        <span class="nav-text">Utility Bills</span>
                      </a>
                    </li>
                  }
                </ul>
              </div>

              <!-- Tenant Management Section (Manager Only) -->
              @if (User.IsInRole("Manager"))
              {
                <div class="nav-section">
                  <div class="nav-section-title">Management</div>
                  <ul class="nav flex-column sidebar-nav">
                    <li class="nav-item">
                      <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tenants" ? "active" : "")" 
                         asp-controller="Tenants" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span class="nav-text">Tenants</span>
                        <span class="nav-badge" title="Tenant Count: @(ViewBag.TenantCount ?? 0)">@(ViewBag.TenantCount ?? 0)</span>
                      </a>
                    </li>
                  </ul>
                </div>
              }
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
              <div class="sidebar-footer-content">
                <div class="sidebar-footer-text">
                  <div class="sidebar-version">Property Management v2.0</div>
                  <div class="sidebar-copyright">© 2025 PropertyTech</div>
                </div>
              </div>
            </div>
          </div>
        </aside>
      }

      <!-- Main Content Area -->
      <main class="main-content">
        <div class="main-content-inner">
          @RenderBody()
        </div>
      </main>
    </div>
    <footer class="border-top footer text-muted mt-auto">
      <div class="container text-center">
        &copy; 2025 - PropertyManagement.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </div>
    </footer>
  </div>
  
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <!-- DataTables JavaScript -->
  <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
  <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
  <!-- DataTables Global Initialization -->
  <script src="~/js/datatables-init.js" asp-append-version="true"></script>
  <!-- Mobile Interactions and Touch Enhancements -->
  <script src="~/js/mobile-interactions.js" asp-append-version="true"></script>
  <!-- Accessibility Enhancements -->
  <script src="~/js/accessibility.js" asp-append-version="true"></script>
  <!-- Performance Optimization System -->
  <script src="~/js/performance-optimizer.js" asp-append-version="true"></script>
  <!-- Toastr JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <!-- Before the closing </body> tag -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script>
    @if (TempData["Success"] != null)
    {
              <text>toastr.success('@TempData["Success"]');</text>
    }
    @if (TempData["Error"] != null)
    {
              <text>toastr.error('@TempData["Error"]');</text>
    }
    @if (TempData["Info"] != null)
    {
              <text>toastr.info('@TempData["Info"]');</text>
    }
    @if (TempData["Warning"] != null)
    {
              <text>toastr.warning('@TempData["Warning"]');</text>
    }
  </script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>