@model PropertyManagement.Web.ViewModels.TenantLoginViewModel

@{
  ViewData["Title"] = "Login";
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-7 col-md-9">
      <div class="card shadow-lg" style="font-size: 1.25rem;">
        <div class="card-header bg-primary text-white">
          <h1 class="mb-0 display-5 text-center"><i class="bi bi-box-arrow-in-right"></i> Login</h1>
        </div>
        <div class="card-body p-5">
          <form asp-action="Login" method="post" autocomplete="off">
            <div class="mb-4">
              <label asp-for="Username" class="form-label fs-4"></label>
              <input asp-for="Username" class="form-control form-control-lg" autocomplete="username" />
              <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-4">
              <label asp-for="Password" class="form-label fs-4"></label>
              <input asp-for="Password" type="password" class="form-control form-control-lg" autocomplete="current-password" />
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid mb-3">
              <button type="submit" class="btn btn-primary btn-lg py-3 fs-4">
                <i class="bi bi-box-arrow-in-right"></i> Login
              </button>
            </div>
          </form>
          <div class="mt-4 text-center fs-5">
            <span>Don't have an account?</span>
            <a asp-action="Register" class="btn btn-link fs-5">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}