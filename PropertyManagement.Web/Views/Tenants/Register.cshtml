@model PropertyManagement.Web.ViewModels.TenantViewModel

@{
  ViewData["Title"] = "Register";
  var rooms = ViewBag.Rooms as List<PropertyManagement.Web.ViewModels.RoomViewModel>;
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-11 col-md-12">
      <div class="card shadow-lg" style="font-size: 1.15rem;">
        <div class="card-header bg-primary text-white">
          <h1 class="mb-0 display-5 text-center"><i class="bi bi-person-plus"></i> Create Account</h1>
        </div>
        <div class="card-body p-5">
          <form asp-action="Register" method="post" autocomplete="off">
            <div class="row g-4">
              <div class="col-md-6">
                <label asp-for="User.Username" class="form-label fs-5"></label>
                <input asp-for="User.Username" class="form-control form-control-lg" autocomplete="username" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label for="plainTextPassword" class="form-label fs-5">Password</label>
                <input type="password" name="plainTextPassword" class="form-control form-control-lg" autocomplete="new-password" required />
              </div>
              <div class="col-md-6">
                <label asp-for="FullName" class="form-label fs-5"></label>
                <input asp-for="FullName" class="form-control form-control-lg" />
                <span asp-validation-for="FullName" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="Contact" class="form-label fs-5"></label>
                <input asp-for="Contact" class="form-control form-control-lg" />
                <span asp-validation-for="Contact" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="RoomId" class="form-label fs-5"></label>
                <select asp-for="RoomId" class="form-select form-select-lg" asp-items="@(new SelectList(rooms, "RoomId", "Number"))">
                  <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="EmergencyContactName" class="form-label fs-5"></label>
                <input asp-for="EmergencyContactName" class="form-control form-control-lg" />
                <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="EmergencyContactNumber" class="form-label fs-5"></label>
                <input asp-for="EmergencyContactNumber" class="form-control form-control-lg" />
                <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
              </div>
            </div>
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary btn-lg py-3 fs-4">
                <i class="bi bi-person-plus"></i> Register
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}