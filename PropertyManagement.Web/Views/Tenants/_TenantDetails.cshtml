@model PropertyManagement.Web.ViewModels.TenantViewModel

<h5>Rental History</h5>
<table class="table table-striped table-bordered align-middle mb-0"
       id="tenantDetailsTable"
       data-datatable
       data-page-length="5"
       data-search-label="Search lease history:"
       data-empty-message="No lease agreements found">
    <thead class="table-light">
        <tr>
            <th>Room</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var lease in Model.LeaseAgreements)
    {
        <tr>
            <td>@lease.Tenant?.Room?.Number</td>
            <td>@lease.StartDate.ToShortDateString()</td>
            <td>@lease.EndDate.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>